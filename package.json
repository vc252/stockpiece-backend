{
  "name": "stockpiece-backend",
  "version": "2.0.0",
  "description": "reformat of previous stockpiece backend with imporvements",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "node ./dist/node.test.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier ./src --write",
    "format:check": "prettier ./src --check",
    "prepare": "husky",
    "build": "tsc",
    "dev": "NODE_ENV=development nodemon -r source-map-support/register --delay 10 ./dist/server.js",
    "start": "NODE_ENV=production node ./dist/server.js",
    "build_dev": "npm run build && npm run dev",
    "lint_build_dev": "npm run lint && npm run build_dev"
  },
  "lint-staged": {
    "./src/**/*": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vc252/stockpiece-backend.git"
  },
  "keywords": [
    "onepiece",
    "stockpiece",
    "stocks",
    "market"
  ],
  "author": "Vipul Chauhan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vc252/stockpiece-backend/issues"
  },
  "homepage": "https://github.com/vc252/stockpiece-backend#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "winston": "^3.17.0",
    "winston-mongodb": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/cors": "^2.8.18",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "source-map-support": "^0.5.21",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
